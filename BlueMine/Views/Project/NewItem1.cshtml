    -->


    <!--
    <link rel="stylesheet" type="text/css" href="ruler.min.css">
    <script src="ruler.js"></script>
    -->

    <style type="text/css">

        html, body 
        {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
        }

        ul { list-style-type: none; }

    </style>


    <!--
    <script src="@Url.Content("/GeneratedScripts/AsyncAjax.js")"></script>
    -->

</head>
<body>
    <h1>@Model.Issue.subject</h1>

    <style>

        input[type="checkbox"] {
            clear: both;
            display: table;
        }
    </style>


    <p id="issue_is_private_wrap">
        <input id="issue_is_private" name="issue[is_private]" type="checkbox" asp-for="Issue.is_private" >
        <label id="issue_is_private_label" class="inline" for="issue_is_private" >Privat</label>
    </p>


    <input type="text" asp-for="Issue.id" />

    <label for="issue_tracker_id">Tracker<span class="required"> *</span></label>
    <select id="issue_tracker_id" name="issue[tracker_id]" asp-for="Issue.tracker_id" asp-items="Model.Trackers" 
            onchange="console.log('used to updateIssueFrom')">
        <option>--- Please select ---</option>
    </select>


    <label for="issue_subject">Thema<span class="required"> *</span></label>
    <input id="issue_subject" name="issue[subject]" asp-for="Issue.subject" size="80" maxlength="255" type="text" />

    <label for="issue_description">Beschreibung</label>
    <textarea id="issue_description" name="issue[description]" asp-for="Issue.description" 
              cols="60" rows="10" accesskey="e" class="wiki-edit"></textarea>

    <label for="issue_status_id">Status<span class="required"> *</span></label>
    <select id="issue_status_id" name="issue[status_id]" asp-for="Issue.status_id" asp-items="Model.Stati" 
            onchange="console.log('used to updateIssueFrom')">
        <option>--- Please select ---</option>
    </select>

    <label for="issue_priority_id">Priorität<span class="required"> *</span></label>
    <select id="issue_priority_id" name="issue[priority_id]" 
            asp-for="Issue.priority_id"
            asp-items="Model.Priorities" ></select>


    <label for="issue_assigned_to_id">Zugewiesen an</label>
    <select id="issue_assigned_to_id" name="issue[assigned_to_id]" 
            asp-for="Issue.assigned_to_id"
            asp-items="Model.AssignedTo" >
        <option value="">&nbsp;</option>
        <option value="5">&lt;&lt; ich &gt;&gt;</option>
    </select>


    <label for="issue_parent_issue_id">Übergeordnete Aufgabe</label>
    <input id="issue_parent_issue_id" name="issue[parent_issue_id]" asp-for="Issue.parent_id" 
           size="10" type="text" class="ui-autocomplete-input autocomplete" autocomplete="off">

    <label for="issue_start_date">Beginn</label>
    <input id="issue_start_date" name="issue[start_date]" asp-for="Issue.start_date" size="10" type="text" class="date hasDatepicker">

    <label for="issue_due_date">Abgabedatum</label>
    <input id="issue_due_date" name="issue[due_date]" asp-for="Issue.due_date" size="10" type="text" class="date hasDatepicker">

    <label for="issue_estimated_hours">Geschätzter Aufwand</label>
    <input id="issue_estimated_hours" name="issue[estimated_hours]" asp-for="Issue.estimated_hours" size="3" type="text" >

    <label for="issue_done_ratio">% erledigt</label>
    <select id="issue_done_ratio" name="issue[done_ratio]" asp-for="Issue.done_ratio" asp-items="Model.PercentComplete" ></select>

    <p>
        <label for="issue_custom_field_values_3">
            <span title="verrechenbar Ja oder Nein" class="field-description">verrechenbar</span>
            <span class="required">*</span>
        </label>

        <span class="list_cf check_box_group">
            <radios id="issue_custom_field_values"
                    name="issue[custom_field_values][3]"
                    asp-for="CustomValues[3].value"
                    asp-items="Model.CustomFields[3]" />
        </span>
    </p>

    <label for="issue_custom_field_values_1">
        <span>gemeldet von</span>
    </label>
    <input id="issue_custom_field_values_1" name="issue[custom_field_values][1]" type="text" asp-for="CustomValues[1].value" class="string_cf">

    <label for="issue_custom_field_values_2">
        <span title="Kundenname oder Intern" class="field-description">Kundenname</span> <span class="required">*</span>
    </label>
    <select id="issue_custom_field_values_2" name="issue[custom_field_values][2]"
            asp-items="Model.CustomFields[2]"
            asp-for="CustomValues[2].value"
            class="list_cf">
        <option value="">--- Bitte auswählen ---</option>
    </select>

    <p>
        <label for="issue_custom_field_values_5">
            <span title="Sollen Kunden über dieses Ticket beim nächsten Update informiert werden?" class="field-description">
                Kunden informieren
            </span>
        </label>
        <select id="issue_custom_field_values_5" name="issue[custom_field_values][5]"
                asp-items="Model.CustomFields[5]"
                asp-for="CustomValues[5].value"
                class="list_cf">
            <!--
            <option value="">&nbsp;</option>
            <option selected="selected" value="--- Bitte auswählen ---">--- Bitte auswählen ---</option>
            -->
        </select>
    </p>


    <script type="text/javascript">

        function onDomReady()
        {
            console.log("dom ready");
        }

        if (document.addEventListener) document.addEventListener("DOMContentLoaded", onDomReady, false);
        else if (document.attachEvent) document.attachEvent("onreadystatechange", onDomReady);
        else window.onload = onDomReady;

        function onPageLoaded()
        {
            console.log("page loaded");
        }

        if (window.addEventListener) window.addEventListener("load", onPageLoaded, false);
        else if (window.attachEvent) window.attachEvent("onload", onPageLoaded);
        else window.onload = onPageLoaded;

    </script>

